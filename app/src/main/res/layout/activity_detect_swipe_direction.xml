<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <EditText
        android:id="@+id/inputField"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/detect_swipe_direction_textview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="93dp"
        android:background="@drawable/textview_border"
        android:baselineAligned="false"
        android:paddingLeft="2dp"
        android:paddingTop="30dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:text="Swipe"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14dp" />

    <TableLayout
        android:layout_width="181dp"
        android:layout_height="106dp"
        android:layout_below="@+id/inputField"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="267dp"
        android:background="@drawable/textview_border">

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/cell11"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 1" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/cell12"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 2" />

            <!-- Column 3 -->
            <TextView
                android:id="@+id/cell13"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 3" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/cell21"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 1" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/cell22"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 2" />

            <!-- Column 3 -->
            <TextView
                android:id="@+id/cell23"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 3" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/cell31"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 1" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/cell32"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 2" />

            <!-- Column 3 -->
            <TextView
                android:id="@+id/cell33"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Column 3" />
        </TableRow>
    </TableLayout>

</RelativeLayout>



